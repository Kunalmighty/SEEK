<Page
    x:Class="SeekAdmin.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SeekAdmin"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <ScrollViewer>
            <StackPanel>

                    <TextBlock
                               Text="Name"
                               Margin="5"/>
                    <TextBox x:ConnectionId='1' Name="NameInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Brand"
                               Margin="5"/>
                    <TextBox x:ConnectionId='2' Name="BrandInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Screen Size"
                               Margin="5"/>
                    <TextBox x:ConnectionId='3' Name="ScreenSizeInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Display Type"
                               Margin="5"/>
                    <TextBox x:ConnectionId='4' Name="DisplayTypeInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Display Resolution"
                               Margin="5"/>
                    <TextBox x:ConnectionId='5' Name="DisplayResolutionInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="OS"
                               Margin="5"/>
                    <TextBox x:ConnectionId='6' Name="OSInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="RAM"
                               Margin="5"/>
                    <TextBox x:ConnectionId='7' Name="RAMInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Price New"
                               Margin="5"/>
                    <TextBox x:ConnectionId='8' Name="PriceNewInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Price Used"
                               Margin="5"/>
                    <TextBox x:ConnectionId='9' Name="PriceUsedInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Performance Tier"
                               Margin="5"/>
                    <TextBox x:ConnectionId='10' Name="PerformanceTierInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Camera Performance Tier"
                               Margin="5"/>
                    <TextBox x:ConnectionId='11' Name="CameraPerformanceTierInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Fingerprint Scanner"
                               Margin="5"/>
                    <TextBox x:ConnectionId='12' Name="FingerprintScannerInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Battery Tier"
                               Margin="5"/>
                    <TextBox x:ConnectionId='13' Name="BatteryTierInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="Best Purchase"
                               Margin="5"/>
                    <TextBox x:ConnectionId='14' Name="BestPurchaseInput" Margin="5" MinWidth="300"></TextBox>

                    <TextBlock
                               Text="New Release"
                               Margin="5"/>
                    <TextBox x:ConnectionId='15' Name="NewReleaseInput" Margin="5" MinWidth="300"></TextBox>

                <Button x:ConnectionId='16' Content="Submit" Name="ButtonSave"                          IsEnabled="True">
                    
                </Button>


            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>

